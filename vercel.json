{
  "redirects": [
    {
      "source": "/:path*",
      "has": [{ "type": "host", "value": "linktopics.me" }],
      "destination": "https://www.linktopics.me/:path*",
      "permanent": true
    },
    {
      "source": "/:path*",
      "has": [{ "type": "header", "key": "x-forwarded-proto", "value": "http" }],
      "destination": "https://www.linktopics.me/:path*",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/((?!.*\\.(?:js|css|mjs|map|png|jpg|jpeg|gif|svg|ico|webp|avif|json|txt|xml|woff|woff2|ttf)).*)",
      "destination": "/index.html"
    }
  ],
  "trailingSlash": false
}
